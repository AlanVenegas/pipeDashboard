<!DOCTYPE html>
<html lang="en">
	<head>
    <meta charset="utf-8">
    <title>Sales Dashboard</title>
    <link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.5.1.css">
    <link href="css/bootstrap.css" rel="stylesheet"><!-- Bootstrap -->
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link href="css/style.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="http://cdn.oesmith.co.uk/morris-0.5.1.min.js"></script>
    <script>
      $(document).ready(function(){
        $("#month").click(function(){
          $("#toggle1").fadeOut();
        });
        $("#year").click(function(){
          $("#toggle2").hide();
        });
      });
    </script>
  </head>
	<body>
    <header>
      <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
            </button>
          </div><!--navbar-header -->
          <!-- Collect content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <button id="month">Month</button>
              <button id="quarter">Quarter</button>
              <button id="year">Year</button>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav> <!--navbar default--> 
   </header>
	<div class="container">
    <div id="toggle1">
      <div class="row no-gutter">
        <div class="col-sm-4"> 
            <h2>Number of calls made</h2>
              <div id="calls-made-month"> 
              </div>
        </div><!-- col-sm-4 --> 
        <div class="col-sm-4">
          <h2>Deals Won</h2>
            <div id="won-month">
            </div><!---won-month-->  
        </div><!-- col-md-4 -->
        <div class="col-sm-4"> 
          <h2>Average calls per day</h2>
            <div id="calls-day-month"> 
            </div>
        </div><!-- col-sm-4 --> 
      </div><!-- row --> 
    <div class="row no-gutter">
      <div class="col-sm-4">
        <h2>Revenue</h2>
        <div id="revenue-month">
        </div><!--revenue-->
      </div><!-- col-md-4 -->
      <div class="col-sm-4">
        <h2>Call Conversion Rate</h2>
        <div id="ccr-month">
          <table>
              <tr>
                <td>Person A:</td>
                <td>5</td>
              </tr> 
              <tr>
                <td>Person B:</td>
                <td>5</td>
              </tr>
              <tr>
                <td>Person C:</td>
                <td>5</td>
              </tr> 
              <tr>
                <td>Person D:</td>
                <td>5</td>
              </tr>
            </table> 
        </div><!-- ccr --> 
      </div><!-- col-sm-4 -->
      <div class="col-sm-4">
        <h3>Average Budget per Campaign</h3>
        <div id="budget-month">
        </div><!-- budget -->
      </div><!-- col-md-4 -->
    </div><!-- row -->
    <div class="row no-gutter">
      <div class="col-sm-3">
        <p class="a">Person A</p>
      </div><!-- col-sm-3 -->
      <div class="col-sm-3">
        <p class="b">Person B</p>
       </div><!-- col-sm-3 -->
      <div class="col-sm-3">
      <p class="c">Person C</p>
      </div><!-- col-sm-3 -->
      <div class="col-sm-3">
      <p class="d">Person D</p>
      </div><!-- col-sm-3 -->
    </div><!-- row no-gutter -->
  </div> <!--toggle-1-->
